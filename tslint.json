{
  "extends": ["tslint-config-airbnb", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["./config/**.ts"]
  },
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "ter-indent": [true, 2],
    "import-name": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ]
  }
}
